@using FINANCE.TRACKER.ViewModels.Category
@model BudgetCategoryViewModel;

<div id="budget-category-table" class="inner-forms">
    <div class="wrapper row">
        <section class="forms">
            <table id="tblBudgetCategory" style="width: 100%;" class="table table-hover" cellspacing="0">
                <thead>
                    <tr>
                        <th>Budget Category Name</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </section>
        <div class="modal fade" id="modalBudgetCategoryDetails" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header primary-background">
                        <h5 class="modal-title" id="budgetCategoryTitle">New Budget Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="budgetCategoryForm" method="post">
                            <div class="col-md-12 mb-3">
                                <label asp-for="BudgetCategoryName" class="form-label">Budget Category Name</label>
                                <input asp-for="BudgetCategoryName" class="form-control pascal-input" autocomplete="off" />
                                <span asp-validation-for="BudgetCategoryName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="BudgetCategoryDescription" class="form-label">Description</label>
                                <textarea asp-for="BudgetCategoryDescription" class="form-control" autocomplete="off"></textarea>
                                <span asp-validation-for="BudgetCategoryDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="chkBudgetCategoryStatus">Status</label><br />
                                <input id="chkBudgetCategoryStatus" type="checkbox" checked data-on-text="Active" data-off-text="Inactive" data-on-color="success" data-off-color="danger">
                            </div>
                            <hr />
                            <div class="d-flex justify-content-end">
                                <button id="btnClearBudgetCategoryForm" type="reset" class="btn btn-secondary me-2">Clear</button>
                                <button id="btnSubmitBudgetCategory" type="button" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Add Budget Category</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>