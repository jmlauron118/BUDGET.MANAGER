@{
    Layout = null;
}
@using FINANCE.TRACKER.ViewModels.Login
@model LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-switch/css/bootstrap-switch.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FINANCE.TRACKER.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/alertify/css/alertify.min.css" />
    <link rel="stylesheet" href="~/lib/alertify/css/default.min.css" />
    <link rel="stylesheet" href="~/lib/alertify/css/semantic.min.css" />
    <link rel="stylesheet" href="~/lib/snackbar/css/snackbar.min.css" />
</head>
<body>
    <div class="login-wrapper">
        <main class="login-container">
            <div class="app-title-container">
                <h1>FINANCE TRACKER</h1>
            </div>
            <form id="loginForm" method="post">
                <h2>SIGN IN</h2>
                <div class="col-md-12 mb-3">
                    <label asp-for="LoginUsername" class="form-label">Username</label>
                    <input asp-for="LoginUsername" class="form-control" autocomplete="off" />
                    <span asp-validation-for="LoginUsername" class="text-danger"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="LoginPassword" class="form-label">Password</label>
                    <input asp-for="LoginPassword" class="form-control" />
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                </div>
                <button id="btnLogin" type="button" class="btn btn-primary">SIGN IN</button>
            </form>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/snackbar/js/snackbar.min.js"></script>
    <script src="~/js/general.js"></script>
    <script src="~/js/modules/_login.js"></script>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            window.onload = function () {
                Notif("@TempData["ErrorMessage"]", "danger");
            };
        </script>
    }

</body>
</html>