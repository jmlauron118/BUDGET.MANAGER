@using BUDGET.MANAGER.ViewModels.UserManager
@model UserRoleViewModel;

<div id="user-role-table" class="inner-forms">
    <div class="wrapper row">
        <section class="forms">
            <table id="tblUserRole" style="width: 100%;" class="table table-hover" cellspacing="0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </section>
        <div class="modal fade" id="modalUserRoleDetails" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header primary-background">
                        <h5 class="modal-title" id="userRoleModalTitle">New Module Action</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="uerRoleForm" method="post">
                            <div class="col-md-12 mb-3">
                                <label asp-for="UserRoleUserName">User</label>
                                <select asp-for="UserRoleUserName" class="form-select"></select>
                                <span asp-validation-for="UserRoleUserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="UserRoleRoleName">Role</label>
                                <select asp-for="UserRoleRoleName" class="form-select"></select>
                                <span asp-validation-for="UserRoleRoleName" class="text-danger"></span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-end">
                                <button id="btnClearUserRoleForm" type="reset" class="btn btn-secondary me-2">Clear</button>
                                <button id="btnSubmitUserRole" btn-process="add" type="button" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Add User Role</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>