@using BUDGET.MANAGER.Models.UserManager
@using BUDGET.MANAGER.Models.UserManager.CombinedModel
@model CombineUserModel;

<div class="wrapper row">
    <section class="forms">
        <table id="tblUsers" style="width: 100%;" class="table table-hover" cellspacing="0">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Username</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Users != null && Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Firstname+ " "+ @user.Lastname</td>
                            <td>@user.Gender</td>
                            <td>@user.Username</td>
                            <td>@(user.IsActive == 1 ? "Active" : "Inactive")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    <div class="modal fade" id="user-details" tabindex="-1" role="dialog" aria-labelledby="user-details" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header primary-background">
                    <h5 class="modal-title" id="user-details">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="userForm" asp-action="AddUser" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="UserValidation.Username" class="form-label">User Name</label>
                                <input id="txtUserName" asp-for="UserValidation.Username" type="text" class="form-control" placeholder="User name">
                                <span asp-validation-for="UserValidation.Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="UserValidation.Password" class="form-label">Password</label>
                                <input id="txtPassword" asp-for="UserValidation.Password" type="text" class="form-control" placeholder="Password">
                                <span asp-validation-for="UserValidation.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="UserValidation.ConfirmPassword" class="form-label">Confirm Password</label>
                                <input id="txtConfirmPassword" asp-for="UserValidation.ConfirmPassword" type="text" class="form-control" placeholder="Confirm password">
                                <span asp-validation-for="UserValidation.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="UserValidation.LastName" class="form-label">Last Name</label>
                                <input id="txtLastName" asp-for="UserValidation.LastName" type="text" class="form-control" placeholder="Last name">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="UserValidation.FirstName" class="form-label">First Name</label>
                                <input id="txtFirstName" asp-for="UserValidation.FirstName" type="text" class="form-control" placeholder="First name">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button asp-controller="UserManager" asp-action="AddUser" type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>