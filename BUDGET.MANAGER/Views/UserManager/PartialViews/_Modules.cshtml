@using BUDGET.MANAGER.Models.UserManager
@model IEnumerable<ModuleModel>;

<div class="wrapper row">
    <section class="forms">
        <table id="tblModules" style="width: 100%;" class="table table-hover" cellspacing="0">
            <thead>
                <tr>
                    <th>Module</th>
                    <th>Description</th>
                    <th>Module Page</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var module in Model)
                    {
                        <tr>
                            <td>@module.ModuleName</td>
                            <td>@module.Description</td>
                            <td>@module.ModulePage</td>
                            <td>@(module.IsActive == 1 ? "Active" : "Inactive")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    <form id="module-details" class="forms">
        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="input-group">
                    <span class="input-group-addon" id="addon1"><i class="fa fa-user" aria-hidden="true"></i></span>
                    <input id="txtUserName" type="text" class="form-control form-control-sm" placeholder="Username" aria-label="Username" aria-describedby="addon1" maxlength="50">
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="input-group">
                    <span class="input-group-addon" id="addon2"><i class="fa fa-lock" aria-hidden="true"></i></span>
                    <input id="txtPassword" type="password" class="form-control form-control-sm" placeholder="Password" aria-label="Password" aria-describedby="addon2" maxlength="50">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label for="txtFirstName">First Name</label>
                <input type="text" class="form-control form-control-sm alpha-only for-username" id="txtFirstName" maxlength="50">
            </div>
            <div class="form-group col-md-3">
                <label for="txtMiddleName">Middle Name</label>
                <input type="text" class="form-control form-control-sm alpha-only for-username" id="txtMiddleName" maxlength="50">
            </div>
            <div class="form-group col-md-4">
                <label for="txtLastName">Last Name</label>
                <input type="text" class="form-control form-control-sm alpha-only for-username" id="txtLastName" maxlength="50">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 pl-1">
                <label for="txtEmployeeId">Employee ID</label>
                <input type="text" class="form-control form-control-sm numbers-only for-username" id="txtEmployeeId">
            </div>
            <div class="col-md-6">
                <label for="chkUserStatus">Status</label><br />
                <input id="chkUserStatus" type="checkbox" checked data-on-text="Active" data-off-text="Inactive" data-on-color="success" data-off-color="danger">
            </div>
        </div>
        <hr />
        <div class="mt-3">
            <button id="btnClearUserForm" type="reset" class="btn btn-dark mr-2 mb-2">Clear</button>
            <button id="btnSubmitUser" btn-process="add" type="button" class="btn btn-primary mb-2"><i class="fa fa-plus" aria-hidden="true"></i> Add User</button>
        </div>
    </form>
</div>