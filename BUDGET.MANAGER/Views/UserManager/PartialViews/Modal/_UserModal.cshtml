@using BUDGET.MANAGER.ViewModels.UserManager
@model UserViewModel;

<div class="modal fade" id="user-details" tabindex="-1" role="dialog" aria-labelledby="user-details" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header primary-background">
                <h5 class="modal-title" id="user-details">Add User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userForm" asp-action="AddUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Username" class="form-label">User Name</label>
                            <input id="txtUserName" asp-for="Username" type="text" class="form-control" placeholder="User name">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input id="txtPassword" asp-for="Password" type="text" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input id="txtConfirmPassword" asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Confirm password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input id="txtLastName" asp-for="LastName" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input id="txtFirstName" asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>